# Environment Variables for Retell AI Integration
# Copy this file to .env and fill in your actual values

# ================================================
# RETELL AI CONFIGURATION
# ================================================

# Your Retell API key (from dashboard.retellai.com)
RETELL_API_KEY=retell_key_xxxxxxxxxxxxxxxx

# Webhook secret for signature verification (optional but recommended)
# Generate with: openssl rand -hex 32
RETELL_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Retell agent ID (created after setting up agent)
RETELL_AGENT_ID=agent_xxxxxxxxxxxxxxxx

# ================================================
# EMAIL CONFIGURATION (SMTP)
# ================================================

# SMTP server details
# For Gmail: smtp.gmail.com
# For Outlook: smtp.office365.com
# For custom: your-smtp-server.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# SMTP authentication
# For Gmail: Use App Password, not your regular password
# Generate at: https://myaccount.google.com/apppasswords
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ================================================
# TWILIO CONFIGURATION (Optional)
# ================================================

# Only needed if using Twilio integration
# Find these at: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio phone number (E.164 format)
TWILIO_PHONE_NUMBER=+12895551234

# ================================================
# SERVER CONFIGURATION
# ================================================

# Port for webhook server
PORT=3000

# Your public webhook URL (must be HTTPS for production)
# Example: https://hooks.yourdomain.com
# Example: https://your-app.vercel.app
WEBHOOK_BASE_URL=https://your-domain.com

# Node environment
NODE_ENV=production

# ================================================
# OPTIONAL SETTINGS
# ================================================

# Maximum call duration in minutes (optional, Retell has default)
# MAX_CALL_DURATION_MINUTES=10

# Enable debug logging (true/false)
DEBUG=false
